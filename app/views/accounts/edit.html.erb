<%= form_for @user, url: account_path, method: :patch, remote: true do |f| %>

	<%= f.fields_for :profile_attributes, @user.profile do |p| %>
	
    <div class="form-group">
      <%= p.label :full_name %>
      <%= p.text_field :full_name, :class => "form-control" %>
    </div>

    <div class="form-group">
      <%= p.label :address1 %>
      <%= p.text_field :address1, :class => "form-control" %>
    </div>

    <div class="form-group">
      <%= p.label :address2 %>
      <%= p.text_field :address2, :class => "form-control" %>
    </div>

    <div class="form-group">
      <%= p.label :city %>
      <%= p.text_field :city, :class => "form-control" %>
    </div>

    <div class="form-group">
      <%= p.label :postcode %>
      <%= p.text_field :postcode, :class => "form-control" %>
    </div>

    <div class="form-group">
      <%= p.label :state %>
      <%= p.text_field :state, :class => "form-control" %>
    </div>

    <div class="form-group">
      <%= p.label :country %>
      <%= p.text_field :country, :class => "form-control" %>
    </div>

    <div class="form-group">
      <%= p.label :phone_number %>
      <%= p.text_field :phone_number, :class => "form-control" %>
    </div>
  
  <% end %>

  <div class="form-group">
    <%= f.submit "Save", :class => "btn btn-primary" %>
    <%= link_to 'Back', account_path, :class => "btn btn-link" %>
  </div>

<% end %>