<div class="row">
  <div class="col-md-4 col-md-offset-4">

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="form-header">
        <h3 class="text-center">Sign Up</h3>
      </div>
      <div class="login-form">

        <%= devise_error_messages! %>

        <div class="form-group">
          <%= f.text_field :username, autofocus: true, class: "form-control input-lg input-washio", placeholder: "Username" %>
        </div>

        <div class="form-group">
          <%= f.email_field :email, class: "form-control input-lg input-washio", placeholder: "Email address" %>
        </div>

        <div class="form-group">
          <% if @validatable %>
          <small>(<%= @minimum_password_length %> characters minimum)</small>
          <% end %>
          <%= f.password_field :password, autocomplete: "off", class: "form-control input-lg input-washio", placeholder: "Password" %>
        </div>

        <div class="form-group">
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control input-lg input-washio", placeholder: "Password confirmation" %>
        </div>

        <div class="form-group">
          <%= f.submit "Sign up", class: "btn btn-primary btn-sm btn-block" %>
        </div>

        <div class="form-group">
          <p><small>Already have an account? <%= link_to "Sign in here", login_path %></small></p>
          <p><small><%= link_to "Didn't receive confirmation instructions?", new_user_confirmation_path %></small></p>
        </div>

      </div>
    <% end %>

  </div>
</div>
