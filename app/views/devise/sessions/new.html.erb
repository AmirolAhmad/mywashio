<div class="row">
  <div class="col-md-4 col-md-offset-4">

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-header">
        <h3 class="text-center">Sign In</h3>
      </div>
      <div class="login-form">

        <div class="form-group">
          <%= f.text_field :login, autofocus: true, class: "form-control input-lg input-washio", placeholder: "Username or email address" %>
        </div>

        <div class="form-group">
          <%= f.password_field :password, autocomplete: "off", class: "form-control input-lg input-washio", placeholder: "Password" %>
          <%= link_to "Forgot password?", new_user_password_path, :class => "small pull-right" %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="checkbox">
            <label>
              <%= f.check_box :remember_me %> Remember me for 2 weeks
            </label>
          </div>
        <% end -%>

        <div class="form-group">
          <%= f.submit "Sign In", class: "btn btn-primary btn-sm btn-block" %>
        </div>

        <div class="form-group">
          <p><small>Don't have an account? <%= link_to "Create one here", register_path %></small></p>
          <p><small><%= link_to "Didn't receive confirmation instructions?", new_user_confirmation_path %></small></p>
        </div>

      </div>
    <% end %>

  </div>
</div>
